<% wrap_layout :default do %>
<% content_for :description do %><% strip_tags(current_page.summary(150, '...')) %><% end %>

<article class="entry hentry video" itemscope itemtype="http://schema.org/BlogPosting">
  <meta content="<%= current_page.url %>" itemprop="url">
  <header class="entry-header">
    <div class="entry-wrapper wrapper">
      <h1 class="entry-title" itemprop="headline"><%= current_page.title %></h1>
      <span class="entry-category">
        <span itemprop="articleSection"><%= current_page.data.category %></span>, by
        <a class="vcard author" href="https://twitter.com/bryanveloso" rel="author" itemprop="creator"><span class="fn">Bryan Veloso</span></a>
      </span>
      <a class="scroll-target" href="#top"><span class="ss-icon ss-air ss-navigatedown"></span></a>
    </div>
  </header>
  <div id="top" class="entry-content" itemprop="articleBody">
    <div class="video-wrapper">
      <div class="embed-container">
        <iframe src="http://youtube.com/embed/<%= current_page.data.ytid %>?vq=hd720&amp;showinfo=0&amp;controls=0" frameborder="0" allowfullscreen itemprop="video"></iframe>
      </div>
    </div>
    <% if current_page.data.ytid %>
    <div class="metadata-display js-yt-metadata">
      <div class="metadata-item entry-views">
        <span class="ss-icon ss-air">&#x1F4FA;</span>
        <span class="entry-dataitem-detail"><span class="js-yt-views"></span> <span class="metadata-prefix">Views</span></span>
      </div>
      <% if current_page.data.series && current_page.data.episode %>
      <div class="metadata-item entry-episode">
        <span class="ss-icon ss-air">&#x1F3AC;</span>
        <span class="entry-dataitem-detail"><span class="metadata-prefix"><%= current_page.data.series %></span> #<%= current_page.data.episode %></span>
      </div>
      <% end %>
      <div class="metadata-item entry-likes">
        <span class="ss-icon ss-air">&#x2665;</span>
        <span class="entry-dataitem-detail"><span class="js-yt-comments"></span> <span class="metadata-prefix">Likes</span></span>
      </div>
    </div>
    <% end %>

    <hr>
    <%= yield %>
  </div>
  <footer class="entry-footer metadata-display">
    <div class="entry-dataitem metadata-item">
      <span class="ss-icon ss-air">&#x1F4C5;</span>
      <time pubdate datetime="<%= current_page.date.strftime("%F") %>" class="entry-dataitem-detail date updated" itemprop="datePublished">
        <span class="metadata-prefix">Uploaded</span> <span class="date updated"><%= current_page.date.strftime("%B %-d, %Y") %></span>
      </time>
    </div>
  </footer>
</article>

<% if current_page.data.ytid %><%= partial "partials/youtube" %><% end %>
<%= partial "partials/footer" %>
<%= partial "partials/juke" %>

<% end %>
